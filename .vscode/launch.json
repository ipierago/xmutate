{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug xmutate (CLI)",
        "type": "lldb",
        "request": "launch",
        "cargo": {
          "args": ["run", "--bin", "xmutate"]
        },
        "args": [
          "run",
          "--mutator", "summarize",
          "--input", "data.json",
          "--output", "out.json",
          "--param", "group_by=category"
        ],
        "cwd": "${workspaceFolder}/xmutate",
        "env": {},
        "terminal": "integrated"
      },
      {
        "name": "Debug xtask",
        "type": "lldb",
        "request": "launch",
        "cargo": {
          "args": ["run", "-p", "xtask", "--"]
        },
        "args": ["dist"],
        "cwd": "${workspaceFolder}",
        "env": {},
        "terminal": "integrated"
      }
    ]
  }
  